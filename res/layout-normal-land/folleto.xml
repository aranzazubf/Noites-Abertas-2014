<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fuentes="http://schemas.android.com/apk/res/com.aranzazu.appnoites14"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal" >

<LinearLayout
    android:layout_width="202dp"
    android:layout_height="match_parent"
    android:layout_marginLeft="20dp"
    android:orientation="vertical" >

    <com.aranzazu.appnoites14.CustomTextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="10dip"
        android:layout_marginTop="20dp"
        android:text="@string/folleto1"
        android:textColor="@color/White"
        android:textSize="14sp"
        android:textStyle="bold"
        fuentes:fuente="Myriad" />

    <Button
        android:id="@+id/buttoner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical|center_horizontal|center"
        android:layout_marginTop="20dp"
        android:background="@drawable/down" />

    </LinearLayout>

   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="match_parent"
       android:orientation="vertical" >

       <ImageView
           android:id="@+id/p3"
           android:layout_width="match_parent"
           android:layout_height="match_parent"
           android:layout_marginRight="50dp"
           android:background="@drawable/dialog2" />

   </LinearLayout>

</LinearLayout>