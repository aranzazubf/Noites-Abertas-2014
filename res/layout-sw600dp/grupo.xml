<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fuentes="http://schemas.android.com/apk/res/com.aranzazu.appnoites14"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="25dip"
        android:cacheColorHint="@android:color/transparent"
        android:mode="oneLine"
        android:paddingLeft="?android:attr/expandableListPreferredItemPaddingLeft" >

        <com.aranzazu.appnoites14.CustomTextView
            android:id="@+id/text_actividades"
            style="@style/actividades_grupo"
            android:layout_marginBottom="-2dip"
            android:layout_marginTop="25dip"
            android:gravity="center_vertical"
            fuentes:fuente="Museo" />
    </LinearLayout>

</LinearLayout>